---
const BRAND = "AI360Plus";
const DOMAIN = "ai360plus.com";
const PRIMARY_CTA = "#lead";
const SECONDARY_CTA = "#packs";

const seo = {
  title: "AI360Plus — SEO Engine + OpsAgent que captan, operan y venden",
  description:
    "Activa un SEO Engine que atrae leads cualificados y conecta con OpsAgent para ejecutar tareas reales con evidencias. Packs listos para convertir.",
}
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />
    <meta name="robots" content="index,follow" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:site_name" content={BRAND} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={seo.title} />
    <meta name="twitter:description" content={seo.description} />

    <style>
      :root{
        --bg:#070A0F;
        --panel:rgba(255,255,255,.04);
        --border:rgba(255,255,255,.10);
        --text:#E9EEF7;
        --muted:rgba(233,238,247,.70);
        --muted2:rgba(233,238,247,.55);
        --accent:#FFFFFF;
        --shadow: 0 12px 40px rgba(0,0,0,.45);
        --r:20px;
        --max:1100px;
      }
      *{box-sizing:border-box}
      html,body{height:100%}
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Apple Color Emoji","Segoe UI Emoji";
        background:
          radial-gradient(1200px 600px at 20% 10%, rgba(255,255,255,.10), transparent 55%),
          radial-gradient(900px 500px at 90% 20%, rgba(255,255,255,.06), transparent 55%),
          var(--bg);
        color:var(--text);
      }
      a{color:inherit;text-decoration:none}
      .wrap{max-width:var(--max);margin:0 auto;padding:0 18px}
      .nav{
        position:sticky; top:0; z-index:10;
        backdrop-filter: blur(10px);
        background: rgba(7,10,15,.55);
        border-bottom:1px solid var(--border);
      }
      .navin{display:flex;align-items:center;justify-content:space-between;padding:14px 0;gap:12px}
      .logo{display:flex;align-items:center;gap:10px;font-weight:700;letter-spacing:.2px}
      .dot{width:10px;height:10px;border-radius:999px;background:#fff;opacity:.9}
      .navlinks{display:flex;gap:14px;flex-wrap:wrap}
      .navlinks a{font-size:13px;color:var(--muted);padding:8px 10px;border-radius:999px;border:1px solid transparent}
      .navlinks a:hover{border-color:var(--border);color:var(--text);background:rgba(255,255,255,.03)}
      .btn{
        display:inline-flex;align-items:center;justify-content:center;gap:10px;
        padding:12px 16px;border-radius:14px;
        border:1px solid var(--border);
        background: rgba(255,255,255,.05);
        color:var(--text);
        font-weight:700;font-size:13px;
      }
      .btn:hover{background:rgba(255,255,255,.08)}
      .btn.primary{
        background:#fff;color:#0b0f16;border-color:#fff;
      }
      .btn.primary:hover{opacity:.92}
      .hero{padding:56px 0 26px}
      .grid{display:grid;gap:18px}
      .heroGrid{grid-template-columns: 1.1fr .9fr;align-items:start}
      @media (max-width: 920px){.heroGrid{grid-template-columns:1fr}}
      .pills{display:flex;gap:10px;flex-wrap:wrap;margin-bottom:14px}
      .pill{
        font-size:12px;color:var(--muted);
        padding:7px 10px;border-radius:999px;
        border:1px solid var(--border);
        background: rgba(255,255,255,.03);
      }
      h1{
        margin:0;
        font-size:44px;
        line-height:1.05;
        letter-spacing:-.8px;
      }
      @media (max-width: 520px){h1{font-size:36px}}
      .u{ text-decoration: underline; text-decoration-color: rgba(255,255,255,.35); text-underline-offset: 6px;}
      .sub{margin:14px 0 0;color:var(--muted);font-size:16px;max-width:52ch}
      .card{
        border:1px solid var(--border);
        background: var(--panel);
        border-radius: var(--r);
        box-shadow: var(--shadow);
      }
      .cardPad{padding:18px}
      .statGrid{grid-template-columns: repeat(3, 1fr); margin-top:16px}
      @media (max-width: 920px){.statGrid{grid-template-columns:1fr}}
      .stat h4{margin:0;color:var(--muted2);font-size:12px;font-weight:700}
      .stat p{margin:8px 0 0;font-size:13px;font-weight:700}
      .section{padding:46px 0}
      .h2{font-size:28px;margin:0;letter-spacing:-.3px}
      .lead{margin:10px 0 0;color:var(--muted);max-width:70ch}
      .two{grid-template-columns: 1fr 1fr}
      @media (max-width: 920px){.two{grid-template-columns:1fr}}
      .list{margin:14px 0 0;padding-left:18px;color:var(--muted);line-height:1.55}
      .chips{display:flex;gap:10px;flex-wrap:wrap;margin-top:14px}
      .chip{font-size:12px;color:var(--muted);border:1px solid var(--border);padding:8px 10px;border-radius:999px;background:rgba(255,255,255,.03)}
      .packs{grid-template-columns: repeat(4, 1fr)}
      @media (max-width: 1100px){.packs{grid-template-columns: repeat(2,1fr)}}
      @media (max-width: 560px){.packs{grid-template-columns: 1fr}}
      .pack h3{margin:0;font-size:16px}
      .price{margin-top:10px;color:var(--muted);font-size:13px}
      .pack ul{margin:12px 0 0;padding-left:18px;color:var(--muted);line-height:1.55;font-size:13px}
      .formGrid{grid-template-columns: 1fr 1fr}
      @media (max-width: 820px){.formGrid{grid-template-columns:1fr}}
      label{display:block;font-size:12px;color:var(--muted2);font-weight:700;margin-bottom:6px}
      input, select, textarea{
        width:100%;
        padding:12px 12px;
        border-radius:14px;
        border:1px solid var(--border);
        background: rgba(0,0,0,.25);
        color:var(--text);
        outline:none;
      }
      textarea{min-height:110px;resize:vertical}
      .actions{display:flex;gap:10px;flex-wrap:wrap;margin-top:12px}
      .fine{margin-top:10px;color:var(--muted2);font-size:12px}
      .footer{padding:30px 0;border-top:1px solid var(--border);color:var(--muted);font-size:13px}
      .kpi{display:flex;gap:10px;flex-wrap:wrap;margin-top:12px}
      .kpi span{border:1px solid var(--border);padding:8px 10px;border-radius:999px;background:rgba(255,255,255,.03);font-size:12px;color:var(--muted)}
    </style>
  </head>

  <body>
    <div class="nav">
      <div class="wrap navin">
        <div class="logo">
          <span class="dot"></span>
          <span>{BRAND}</span>
        </div>
        <div class="navlinks">
          <a href="#how">Cómo funciona</a>
          <a href="#packs">Packs</a>
          <a href="#proof">Evidencias</a>
          <a href="#lead">Activar</a>
        </div>
        <a class="btn primary" href={PRIMARY_CTA}>Activar ahora</a>
      </div>
    </div>

    <main id="top">
      <section class="hero">
        <div class="wrap">
          <div class="grid heroGrid">
            <div>
              <div class="pills">
                <span class="pill">SEO Engine Pack v1</span>
                <span class="pill">OpsAgent (Browser)</span>
                <span class="pill">Conversión medible</span>
                <span class="pill">Evidencias incluidas</span>
              </div>

              <h1>
                Automatización que <span class="u">capta</span>, <span class="u">opera</span> y <span class="u">vende</span>.
              </h1>

              <p class="sub">
                Lanza un motor SEO que atrae leads cualificados y conecta con OpsAgent para ejecutar tareas reales (con auditoría y pruebas).
                Menos humo. Más resultados.
              </p>

              <div class="actions" style="margin-top:18px">
                <a class="btn" href="#how">Ver el flujo</a>
                <a class="btn primary" href={SECONDARY_CTA}>Elegir pack</a>
              </div>

              <div class="grid statGrid" style="margin-top:18px">
                <div class="card cardPad stat">
                  <h4>Scoring</h4>
                  <p>Fit / Intent / Authority / Timing</p>
                </div>
                <div class="card cardPad stat">
                  <h4>OpsAgent</h4>
                  <p>Misiones + evidencias</p>
                </div>
                <div class="card cardPad stat">
                  <h4>Control</h4>
                  <p>Audit trail + supervisor loop</p>
                </div>
              </div>
            </div>

            <div>
              <div class="card cardPad">
                <div style="font-weight:800">Camino rápido a conversión</div>
                <p class="lead" style="margin-top:10px">
                  Empieza con un despliegue enfocado. Si no estás seguro, elige “Starter Audit”:
                  fácil de activar, fácil de probar, y te deja el mapa listo.
                </p>
                <div class="card cardPad" style="margin-top:14px;background:rgba(0,0,0,.22)">
                  <div style="font-size:12px;color:var(--muted2);font-weight:800">Resultados típicos</div>
                  <ul class="list">
                    <li>Más conversaciones calificadas</li>
                    <li>Menos operaciones manuales</li>
                    <li>Seguimiento más rápido y mayor cierre</li>
                  </ul>
                </div>
                <div class="kpi">
                  <span>SEO → Lead</span>
                  <span>Lead → Pack</span>
                  <span>Pack → Conversión</span>
                </div>
                <div class="fine">Sin hype. Automatización real. Evidencias incluidas.</div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="proof" class="section">
        <div class="wrap">
          <div class="grid two">
            <div>
              <h2 class="h2">Evidencia, no promesas</h2>
              <p class="lead">
                Cada activación deja trazabilidad: qué se hizo, cuándo, con qué pruebas y qué impacto tuvo.
                Tu “supervisor loop” puede priorizar urgencias y asignar humano/IA automáticamente.
              </p>
              <ul class="list">
                <li>Registro de acciones (audit trail)</li>
                <li>Capturas / logs / enlaces de verificación</li>
                <li>Cola interna priorizada por urgencia</li>
                <li>Asignación humano/IA según SLA</li>
              </ul>
            </div>
            <div class="card cardPad">
              <div style="font-weight:800">Qué medimos desde el día 1</div>
              <div class="chips">
                <span class="chip">Conversiones por pack</span>
                <span class="chip">Tasa de respuesta</span>
                <span class="chip">Tiempo a primer valor</span>
                <span class="chip">Coste por lead</span>
                <span class="chip">Leads cualificados</span>
              </div>
              <p class="fine">
                Objetivo: que puedas decir “esto genera ingresos / esto ahorra tiempo” sin discusiones.
              </p>
            </div>
          </div>
        </div>
      </section>

      <section id="how" class="section">
        <div class="wrap">
          <h2 class="h2">Cómo funciona</h2>
          <p class="lead">
            Un sistema simple: atraer (SEO Engine), operar (OpsAgent), convertir (ventas + seguimiento).
            Todo medible.
          </p>

          <div class="grid two" style="margin-top:18px">
            <div class="card cardPad">
              <div style="font-weight:800">1) Capture</div>
              <ul class="list">
                <li>Contenido SEO por intención</li>
                <li>Landing por nicho/servicio</li>
                <li>CTAs con tracking</li>
              </ul>
            </div>
            <div class="card cardPad">
              <div style="font-weight:800">2) Operate</div>
              <ul class="list">
                <li>OpsAgent ejecuta tareas browser</li>
                <li>Pruebas y evidencias</li>
                <li>Escalado por playbooks</li>
              </ul>
            </div>
            <div class="card cardPad">
              <div style="font-weight:800">3) Convert</div>
              <ul class="list">
                <li>Formularios + scoring</li>
                <li>Asignación humano/IA</li>
                <li>Seguimiento y cierre</li>
              </ul>
            </div>
            <div class="card cardPad">
              <div style="font-weight:800">Timeline (Día 0–21)</div>
              <ul class="list">
                <li>D0: Activación + objetivos</li>
                <li>D3: Primeras URLs + tracking</li>
                <li>D7: Primeros leads</li>
                <li>D14: Optimización por conversión</li>
                <li>D21: Escalado por packs</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <section id="packs" class="section">
        <div class="wrap">
          <h2 class="h2">Packs activables</h2>
          <p class="lead">Elige un pack. Lo activamos. Lo medimos. Lo escalamos.</p>

          <div class="grid packs" style="margin-top:18px">
            <div class="card cardPad pack">
              <h3>Starter Audit</h3>
              <div class="price">Ideal para empezar</div>
              <ul>
                <li>Diagnóstico + mapa de quick wins</li>
                <li>Tracking de conversión</li>
                <li>Plan 21 días</li>
              </ul>
            </div>

            <div class="card cardPad pack">
              <h3>Lead Engine</h3>
              <div class="price">SEO → Leads</div>
              <ul>
                <li>Landings por intención</li>
                <li>Contenido por nicho</li>
                <li>Optimización por conversion</li>
              </ul>
            </div>

            <div class="card cardPad pack">
              <h3>OpsAgent</h3>
              <div class="price">Browser tasks</div>
              <ul>
                <li>Misiones de navegador</li>
                <li>Evidencias y auditoría</li>
                <li>Supervisor loop</li>
              </ul>
            </div>

            <div class="card cardPad pack">
              <h3>Sales AI</h3>
              <div class="price">Follow-up y cierre</div>
              <ul>
                <li>Scoring + asignación humano/IA</li>
                <li>Automatización de seguimiento</li>
                <li>Métricas por pack</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <section id="lead" class="section">
        <div class="wrap">
          <div class="grid two">
            <div>
              <h2 class="h2">Activar ahora</h2>
              <p class="lead">
                Deja tus datos y el pack objetivo. En cuanto entra, tu cola interna puede:
                <b>priorizar por urgencia</b> + <b>asignar humano/IA</b> + <b>medir conversión por pack</b>.
              </p>
              <ul class="list">
                <li>Sin fricción</li>
                <li>Con trazabilidad</li>
                <li>Con métricas desde el día 1</li>
              </ul>
            </div>

            <div class="card cardPad">
              <form method="POST" action="/api/leads/from-seo">
                <div class="grid formGrid">
                  <div>
                    <label>Empresa</label>
                    <input name="company" placeholder="Tu empresa" required />
                  </div>
                  <div>
                    <label>Nombre</label>
                    <input name="fullName" placeholder="Tu nombre" required />
                  </div>
                  <div>
                    <label>Email</label>
                    <input type="email" name="email" placeholder="tu@email.com" required />
                  </div>
                  <div>
                    <label>Pack</label>
                    <select name="pack" required>
                      <option value="Starter Audit">Starter Audit</option>
                      <option value="Lead Engine">Lead Engine</option>
                      <option value="OpsAgent">OpsAgent</option>
                      <option value="Sales AI">Sales AI</option>
                      <option value="International">International</option>
                    </select>
                  </div>
                </div>

                <div style="margin-top:12px">
                  <label>Notas</label>
                  <textarea name="notes" placeholder="Qué necesitas, qué te duele, objetivo..."></textarea>
                </div>

                <input type="hidden" name="site" value={DOMAIN} />
                <input type="hidden" name="brand" value={BRAND} />

                <div class="actions">
                  <button class="btn primary" type="submit">Solicitar activación</button>
                  <a class="btn" href="#top">Volver arriba</a>
                </div>

                <div class="fine">
                  Al enviar, se registra un lead para el equipo de {BRAND}. (Siguiente: conectar token + backend)
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="wrap">
        © {new Date().getFullYear()} {BRAND}. SEO Engine + OpsAgent. “Energía limpia y sana”.
      </div>
    </footer>
  </body>
</html>
